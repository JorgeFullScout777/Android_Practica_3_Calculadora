<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/teclado"
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#F5F5F5"
        >

        <Button
            android:text="1"
            android:id="@+id/btn1"
            style="@style/Botones"
            app:layout_constraintStart_toStartOf="@id/teclado"
            app:layout_constraintTop_toTopOf="@id/teclado"
            app:layout_constraintEnd_toStartOf="@id/btn2"
            app:layout_constraintHorizontal_chainStyle="spread"

            app:layout_constraintBottom_toTopOf="@id/btn4"

            >
        </Button>
        <Button
            android:text="2"
            android:id="@+id/btn2"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn1"
            app:layout_constraintEnd_toStartOf="@id/btn3"

            app:layout_constraintTop_toTopOf="@id/teclado"
            app:layout_constraintBottom_toTopOf="@id/btn5"
            >
        </Button>
        <Button
            android:text="3"
            android:id="@+id/btn3"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintEnd_toStartOf="@id/btndiv"

            app:layout_constraintTop_toTopOf="@id/teclado"
            app:layout_constraintBottom_toTopOf="@id/btn6"
            >
        </Button>
        <Button
            android:text="+"
            android:id="@+id/btnsum"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn3"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="@id/teclado"
            app:layout_constraintBottom_toTopOf="@id/btndiv"
            >
        </Button>
        <Button
            android:text="รท"
            android:id="@+id/btndiv"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn3"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@id/btnsum"
            app:layout_constraintBottom_toTopOf="@id/btnmul"
            >
        </Button>

        <Button
            android:text="4"
            android:id="@+id/btn4"
            style="@style/Botones"
            app:layout_constraintStart_toStartOf="@id/teclado"
            app:layout_constraintEnd_toStartOf="@id/btn5"
            app:layout_constraintHorizontal_chainStyle="spread"

            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintBottom_toTopOf="@id/btn7"

            >

        </Button>
        <Button
            android:text="5"
            android:id="@+id/btn5"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn4"
            app:layout_constraintEnd_toStartOf="@id/btn6"

            app:layout_constraintTop_toBottomOf="@id/btn2"
            app:layout_constraintBottom_toTopOf="@id/btn8"
            ></Button>
        <Button
            android:text="6"
            android:id="@+id/btn6"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintEnd_toStartOf="@id/btnmul"

            app:layout_constraintTop_toBottomOf="@id/btn3"
            app:layout_constraintBottom_toTopOf="@id/btn9"
            >
        </Button>
        <Button
            android:text="x"
            android:id="@+id/btnmul"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn6"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@id/btndiv"
            app:layout_constraintBottom_toTopOf="@id/btnres"
            >
        </Button>

        <Button
            android:text="7"
            android:id="@+id/btn7"
            style="@style/Botones"
            app:layout_constraintStart_toStartOf="@id/teclado"
            app:layout_constraintEnd_toStartOf="@id/btn8"
            app:layout_constraintHorizontal_chainStyle="spread"

            app:layout_constraintTop_toBottomOf="@id/btn4"
            app:layout_constraintBottom_toTopOf="@id/btn"
            ></Button>
        <Button
            android:text="8"
            android:id="@+id/btn8"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn7"
            app:layout_constraintEnd_toStartOf="@id/btn9"

            app:layout_constraintTop_toBottomOf="@id/btn5"
            app:layout_constraintBottom_toTopOf="@id/btn0"
            ></Button>
        <Button
            android:text="9"
            android:id="@+id/btn9"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn8"
            app:layout_constraintEnd_toStartOf="@id/btnres"

            app:layout_constraintTop_toBottomOf="@id/btn6"
            app:layout_constraintBottom_toTopOf="@id/btn."
            ></Button>
        <Button
            android:text="-"
            android:id="@+id/btnres"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn9"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@id/btnmul"
            app:layout_constraintBottom_toTopOf="@id/btnigual"
            ></Button>

        <Button
            android:text="C"
            android:id="@+id/btn"
            style="@style/Botones"
            app:layout_constraintStart_toStartOf="@id/teclado"
            app:layout_constraintEnd_toStartOf="@id/btn0"
            app:layout_constraintHorizontal_chainStyle="spread"

            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintBottom_toBottomOf="@id/teclado"
            ></Button>
        <Button
            android:text="0"
            android:id="@+id/btn0"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn"
            app:layout_constraintEnd_toStartOf="@id/btn."

            app:layout_constraintTop_toBottomOf="@id/btn8"
            app:layout_constraintBottom_toBottomOf="@id/teclado"
            ></Button>
        <Button
            android:text="."
            android:id="@+id/btn."
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn0"
            app:layout_constraintEnd_toStartOf="@id/btnigual"

            app:layout_constraintTop_toBottomOf="@id/btn9"
            app:layout_constraintBottom_toBottomOf="@id/teclado"
            ></Button>
        <Button
            android:text="="
            android:id="@+id/btnigual"
            style="@style/Botones"
            app:layout_constraintStart_toEndOf="@id/btn."
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@id/btnres"
            app:layout_constraintBottom_toBottomOf="@id/teclado"
            ></Button>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pantalla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/teclado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/texto"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="hola"
            android:textSize="40dp"
            android:gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@id/pantalla"
            app:layout_constraintEnd_toEndOf="@id/pantalla"
            app:layout_constraintStart_toStartOf="@id/pantalla"
            app:layout_constraintTop_toTopOf="parent"
            ></TextView>

        <TextView
            android:id="@+id/ultimoadd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toTopOf="@+id/texto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>